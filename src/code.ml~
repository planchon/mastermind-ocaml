(** Module de definition d'un code dans le jeu de Mastermind*)
module Code:
  sig
          (** Le nombre de pions par code*)
          val nombre_pion : int
          
          (** Le nombre de couleur et symboles possibles*)
          val couleur_possibles : int
  end =
  struct
          let nombre_pion = 4;;
          let couleur_possibles = 6;;
  end;;
